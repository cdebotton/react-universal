{
  "extends": "airbnb",
  "globals": {
    "__DEV__": false,
    "__PROD__": false,
    "__CLIENT__": false,
    "__SERVER__": false,
    "__DEBUG__": false
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "spaced-comment": 0,
    "new-cap": 0,
    "babel/generator-star-spacing": [2, "after"],
    "babel/new-cap": 2,
    "babel/object-curly-spacing": [0, "always"],
    "babel/object-shorthand": 2,
    "babel/arrow-parens": [2, "as-needed"],
    "max-len": [2, 80, 2],
  },
  "plugins": [
    "babel"
  ]
}
